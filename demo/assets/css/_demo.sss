ragrid-demo
  display: block
  position: relative
  padding: 0 1rem
  margin-bottom: 30vh
  margin-top: 2rem
  
  & > [grid]
    margin-top: 1rem
    
  & [grid="rows"]
    max-height: 70vh
    
  & .controls
    position: absolute
    width: 230px
    top: 60px
    left: 0
    
    &.distribute-objects
      top: 112px
    &.distribute-spacing
      top: 163px
      width: 70px
      
    & button
      padding: 0
      opacity: 0.1
      min-height: 1.5em
      
  & article
    
    & > section
      & > div:nth-child(1)
        height: 50px
      & > div:nth-child(3)
        height: 200px
      & > div:nth-child(5)
        width: 200px
        height: 200px
      & > div:nth-child(7)
        height: 250px
      & > div:nth-child(9)
        height: 150px
        width: 250px
      & > div:nth-child(11)
        width: 50px
      & > div:nth-child(13)
        height: 100px
    
  & .feature
    margin-top: 1rem
    margin-bottom: 0.5rem
    
    & > h4
      margin-bottom: 0.5rem

// tablet and up styles
@media(min-width:768px)
  ragrid-demo
    & nav
      flex: 1
      max-width: 230px
    & article
      margin-left: 2rem

.align-panel
  position: relative
  margin-bottom: 1rem
    
.guide
  min-height: 30px
  text-align: center
  
.card
  max-width: 400px
  box-shadow: 0 0.1rem 0.5rem hsl(0,0%,80%)
  padding: 1rem
  border-radius: 0.2em
  background: white
  
  & > .card-header
    & .avatar
      border-radius: 50%
      overflow: hidden

    & h2, small
      margin: 0
      
    & > div
      margin-left: 0.5rem
      
    & date
      font-size: 0.7rem
      color: hsl(0,0%,50%)
  
  & > .card-content
    margin-top: 0.5rem
    margin-bottom: 0.5rem
      
    & > img
      max-width: 100%
      
    & > p
      margin-top: 0.5rem
    
  & > .card-footer
    padding-top: 0.5rem
    border-top: 1px solid hsl(0,0%,90%)
    
    & a
      padding: 0.5rem 1rem
      &:hover
        background: hsl(0,0%,90%)
        
    & time
      flex: 2
      text-align: right
      font-size: 0.7rem
      color: hsl(0,0%,50%)